// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Extension Dev",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$ts-webpack-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
			}
		},
		{
			"label": "Webview UI Dev",
			"type": "npm",
			"script": "dev",
			// "problemMatcher": "$ts-webpack-watch",
			"problemMatcher": [
				{
					"base": "$ts-webpack-watch",
					"owner": "RSPack",
					"fileLocation": "absolute",				
					"background": {
						"activeOnStart": true,
						"beginsPattern": {
							"regexp": "Rsbuild v",
						},
						"endsPattern": {
							"regexp": "Client compiled in"
						}
					}
				},
			],
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
			},
			"options": {
				"cwd": "${workspaceFolder}/webview-ui"
			}
		},
		{
			"type": "npm",
			"script": "watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		},
		{
			"label": "Development",
			"dependsOn": [
				"Extension Dev",
				"Webview UI Dev",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}
