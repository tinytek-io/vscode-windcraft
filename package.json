{
  "name": "windcraft",
  "displayName": "WindCraft",
  "version": "0.0.1",
  "preview": true,
  "publisher": "tinytek-io",
  "description": "Your visual crafting table for Tailwind CSS",
  "logo": "images/logo/windcraft-logo-05.webp",
  "icon": "images/logo/windcraft-logo-05.webp",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "TinyTek.io team"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tinytek-io/windcraft"
  },
  "bugs": {
    "url": "https://github.com/tinytek-io/windcraft/issues"
  },
  "pricing": "Trial",
  "sponsor": {
    "url": "https://github.com/sponsors/tinytek-io"
  },
  "engines": {
    "vscode": "^1.87.0"
  },
  "galleryBanner": {
    "color": "#F2F2F2",
    "theme": "light"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "keywords": [
    "tailwind",
    "css",
    "design",
    "ui",
    "windcraft",
    "design"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "build": "webpack --mode production --devtool hidden-source-map",
    "package": "npm run build:webview && npm run build",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "contributes": {
    "keybindings": [
      {
        "command": "windcraft.alignLeft",
        "mac": "alt+a"
      },
      {
        "command": "windcraft.alignRight",
        "mac": "alt+d"
      },
      {
        "command": "windcraft.alignTop",
        "mac": "alt+w"
      },
      {
        "command": "windcraft.alignBottom",
        "mac": "alt+s"
      },
      {
        "command": "windcraft.alignCenterHorizontal",
        "mac": "alt+h"
      },
      {
        "command": "windcraft.alignCenterVertical",
        "mac": "alt+v"
      }
    ],
    "configuration": {
      "title": "WindCraft Settings",
      "properties": {
        "windcraft.themeFile": {
          "order": 1,
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Tailwind CSS theme css file path"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "icon": "images/logo/windcraft-icon.svg",
          "type": "webview",
          "id": "windcraft.tailwindView",
          "name": "WindCraft",
          "contextualTitle": "WindCraft"
        }
      ]
    },
    "commands": [
      {
        "command": "windcraft.clearTailwindStyles",
        "category": "WindCraft",
        "title": "Clear Tailwind styles",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "windcraft.clearTailwindStyles",
          "group": "navigation",
          "when": "view == windcraft.tailwindView"
        }
      ]
    }
  }
}
