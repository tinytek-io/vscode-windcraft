{
  "name": "@windcraft/ts-plugin",
  "private": true,
  "version": "0.0.1",
  "main": "./plugin.export.js",
  "exports": {
    ".": "./plugin.export.js",
    "./ast/*": "./dist/client/ast/*.js",
    "./client/*": "./dist/client/client/*.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev:client": "tsc -p . -w",
    "dev:server": "rspack --watch",
    "build:client": "rm -rf ./dist && tsc -p .",
    "build:server": "rspack --mode production",
    "check:types": "tsc -p . --noEmit",
    "dryrun": "node ./plugin.dryrun.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^4.17.21"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "express": "^4.19.2",
    "zod": "^3.23.8"
  }
}
