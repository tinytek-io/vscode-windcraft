{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "paths": {
      "@/*": [ "./src/*" ]
    }
  },
  "include": [
      "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}