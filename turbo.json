{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
      "enabled": false
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^build:client", "^build:server"],
      "outputs": ["dist/**"]
    },
    "build:client": {
      "dependsOn": ["^build:client"],
      "outputs": ["dist/client/**"]
    },
    "build:server": {
      "dependsOn": ["^build:server"],
      "outputs": ["dist/server/**"]
    },
    "check:types": {
      "dependsOn": ["^check:types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "dev:client": {
      "persistent": true,
      "cache": false
    },
    "dev:server": {
      "persistent": true,
      "cache": false
    }
  }
}